CC = gcc
SRC := $(shell ls *c)
NAME = school
OBJ := $(subst .c,.o,$(SRC))
RM := rm -f
CFLAGS := -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(OBJ)
		$(CC) $(OBJ) -o $(NAME)

%.o: %.c m.h
		$(CC) $(CFLAGS) -c -o $@ $<
			
clean:
		$(RM) *~ $(NAME)

oclean:
		$(RM) $(OBJ) 

fclean: clean oclean

re: oclean


