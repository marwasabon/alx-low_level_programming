CC = gcc
SRC = main.c school.c 
NAME = school
OBJ = $(subst .c,.o,$(SRC))
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(OBJ)
		$(CC) $(OBJ) -o $(NAME)

%.o: %.c
		$(CC) $(CFLAGS)   -c -o $@ $<
			
clean:
		$(RM) *~ $(NAME)

oclean:
		$(RM) $(OBJ) 

fclean: clean oclean

re: oclean all


